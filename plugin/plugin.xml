<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.sf.graphiti.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension point="org.eclipse.ui.editors">
      <editor
            class="net.sf.graphiti.ui.editors.GraphEditor"
            contributorClass="net.sf.graphiti.ui.editors.GraphActionBarContributor"
            default="false"
            icon="icons/graphiti.gif"
            id="net.sf.graphiti.ui.editors.GraphEditor"
            name="Graphiti graph editor">
         <contentTypeBinding
               contentTypeId="org.eclipse.core.runtime.text">
         </contentTypeBinding>
         <contentTypeBinding
               contentTypeId="org.eclipse.core.runtime.xml">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="net.sf.graphiti.ui.newWizards.graphiti"
            name="Graphiti">
      </category>
      <wizard
            category="net.sf.graphiti.ui.newWizards.graphiti"
            class="net.sf.graphiti.ui.wizards.NewGraphWizard"
            finalPerspective="net.sf.graphiti.ui.perspective"
            hasPages="true"
            icon="icons/graphiti.gif"
            id="net.sf.graphiti.ui.wizards.NewGraphWizard"
            name="Graph"
            project="false">
         <description>
            Create an empty graph.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="net.sf.graphiti.ui.perspectives.GraphitiPerspectiveFactory"
            fixed="false"
            icon="icons/graphiti.gif"
            id="net.sf.graphiti.ui.perspective"
            name="Graphiti">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.sf.graphiti.ui.preferences.GraphitiPreferences"
            id="net.sf.graphiti.ui.preferences.GraphitiPreferences"
            name="Graphiti">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="net.sf.graphiti.ui.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="net.sf.graphiti.ui.views"
            name="Graphiti">
      </category>
      <view
            allowMultiple="false"
            category="net.sf.graphiti.ui.views"
            class="net.sf.graphiti.ui.views.SimplePropertyView"
            icon="icons/graphiti.gif"
            id="net.sf.graphiti.ui.views.SimplePropertyView"
            name="Properties"
            restorable="true">
         <description>
            The Properties view displays properties associated with the current selection. Properties are key-value associations where both the key and value are strings.
         </description>
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="net.sf.graphiti.ui.properties.ParametersPropertyPage"
            id="net.sf.graphiti.ui.properties.parametersPropertyPage"
            name="Parameters">
         <enabledWhen>
            <instanceof
                  value="net.sf.graphiti.model.AbstractObject">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="net.sf.graphiti.configuration.definition">
      <configuration
            extension="xdf"
            name="XDF"
            type="text/xml">
         <graphType
               name="XML Dataflow Network">
            <parameter
                  name="id"
                  type="java.lang.String">
            </parameter>
            <parameter
                  name="network parameter"
                  type="java.util.List">
            </parameter>
            <parameter
                  name="network variable declaration"
                  type="java.util.Map">
            </parameter>
         </graphType>
         <vertexType
               name="Input port">
            <parameter
                  name="id"
                  type="java.lang.String">
            </parameter>
            <parameter
                  default="int(size=32)"
                  name="port type"
                  type="java.lang.String">
            </parameter>
               <color
                     blue="100"
                     green="60"
                     red="0">
               </color>
               <size
                     height="30"
                     width="30">
               </size>
               <shape
                     type="triangle">
               </shape>
         </vertexType>
         <vertexType
               name="Output port">
            <parameter
                  name="id"
                  type="java.lang.String">
            </parameter>
            <parameter
                  default="int(size=32)"
                  name="port type"
                  type="java.lang.String">
            </parameter>
               <color
                     blue="100"
                     green="0"
                     red="60">
               </color>
               <shape
                     type="triangle">
               </shape>
               <size
                     height="30"
                     width="30">
               </size>
         </vertexType>
         <vertexType
               name="Instance">
            <parameter
                  name="id"
                  type="java.lang.String">
            </parameter>
            <parameter
                  name="instance parameter"
                  type="java.util.Map">
            </parameter>
            <parameter
                  name="refinement"
                  type="java.lang.String">
            </parameter>
            <color
                  blue="23"
                  green="232"
                  red="190">
            </color>
            <size
                  height="40"
                  width="40">
            </size>
            <shape
                  type="roundedBox">
            </shape>
         </vertexType>
         <edgeType
               directed="true"
               name="Connection">
            <parameter
                  name="source port"
                  type="java.lang.String">
            </parameter>
            <parameter
                  name="target port"
                  type="java.lang.String">
            </parameter>
            <parameter
                  name="buffer size"
                  type="java.lang.String">
            </parameter>
         </edgeType>
         <import>
            <transformation
                  name="input_XDF.xslt"
                  type="xslt">
            </transformation>
         </import>
         <export>
            <transformation
                  name="output_XDF.xslt"
                  type="xslt">
            </transformation>
         </export>
         <refinement-values>
            <file-extension
                  name="xdf">
            </file-extension>
            <file-extension
                  name="xnl">
            </file-extension>
            <file-extension
                  name="nl">
            </file-extension>
            <file-extension
                  name="cal">
            </file-extension>
         </refinement-values>
      </configuration>
   </extension>

</plugin>
