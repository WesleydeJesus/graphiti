                <parameter name="version" type="java.lang.String" default=""/>
                <parameter name="refinement" type="java.lang.String" default=""/>
                <parameter name="dataRate" type="java.lang.String" default="1.0"/>
            </parameters>
        </vertexType>
        
        <vertexType name="fifo">
            <attributes>
                <color red="224" green="74" blue="236"/>
                <shape name="circle"/>
                <size width="40" height="40"/>
