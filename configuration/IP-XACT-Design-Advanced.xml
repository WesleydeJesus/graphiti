    <edgeTypes>
        <edgeType name="interconnection">
            <attributes>
                <directed value="false"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="source port" type="java.lang.String" default=""/>
                <parameter name="target port" type="java.lang.String" default=""/>
            </parameters>
        </edgeType>
        
        <edgeType name="hierConnection">
            <attributes>
                <color red="255" green="0" blue="0"/>
                <directed value="false"/>
            </attributes>
            <parameters>
                <parameter name="source port" type="java.lang.String" default=""/>
            </parameters>
        </edgeType>
        
        <edgeType name="directedConnection">
            <attributes>
                <directed value="true"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="source port" type="java.lang.String" default=""/>
