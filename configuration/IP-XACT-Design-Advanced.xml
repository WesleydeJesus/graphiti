<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <fileFormat extension="ipxactds" type="text/xml">
        <import>
            <transformation type="xslt" file="ip-xact/advanced/input_IP-XACT-Design.xslt"/>
        </import>
        
        <export>
            <transformation name="ip-xact/advanced/output_IP-XACT-Design.xslt"/>
        </export>
    </fileFormat>

    <refinementFileExtensions>
        <fileExtension name="ipxactcmp"/>
    </refinementFileExtensions>

    <graphTypes>
        <graphType name="Spirit IP-XACT advanced design">
            <attributes/>
            <parameters>
                <parameter name="vendor" type="java.lang.String" default=""/>
                <parameter name="library" type="java.lang.String" default=""/>
                <parameter name="name" type="java.lang.String" default=""/>
                <parameter name="version" type="java.lang.String" default=""/>
            </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="hierConnection">
            <attributes>
                <color red="255" green="0" blue="0"/>
                <shape name="roundedBox"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="componentInstance">
            <attributes>
                <color red="163" green="0" blue="85"/>
                <shape name="roundedBox"/>
                <size width="40" height="40"/>
