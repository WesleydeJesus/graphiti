<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <fileFormat extension="xdf" type="text/xml">
        <import>
            <transformation name="xdf/input_XDF.xslt"/>
        </import>
        
        <export>
            <transformation name="xdf/output_XDF.xslt"/>
        </export>
    </fileFormat>

    <refinementFileExtensions>
        <fileExtension name="xdf"/>
        <fileExtension name="xnl"/>
        <fileExtension name="nl"/>
        <fileExtension name="cal"/>
        <fileExtension name="calml"/>
    </refinementFileExtensions>

    <graphTypes>
        <graphType name="XML Dataflow Network">
            <attributes/>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="network parameter" type="java.util.List">
                    <!-- default content: none -->
                </parameter>
                <parameter name="network variable declaration" type="java.util.Map">
                    <!-- default content: none -->
                </parameter>
            </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="Input port">
            <attributes>
                <color red="0" green="60" blue="100"/>
                <shape name="triangle"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="port type" type="java.lang.String" default="int(size=32)"/>
            </parameters>
        </vertexType>

        <vertexType name="Output port">
            <attributes>
                <color red="60" green="0" blue="100"/>
                <shape name="triangle"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="port type" type="java.lang.String" default="int(size=32)"/>
            </parameters>
        </vertexType>

        <vertexType name="Instance">
            <attributes>
                <color red="163" green="0" blue="85"/>
                <shape name="roundedBox"/>
                <size width="40" height="40"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="instance parameter" type="java.util.Map">
                    <!-- default content: none -->
                </parameter>
                <parameter name="refinement" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes>
        <edgeType name="Connection">
            <attributes>
                <directed value="true"/>
            </attributes>
            <parameters>
                <parameter name="source port" type="java.lang.String" default=""/>
                <parameter name="target port" type="java.lang.String" default=""/>
            </parameters>
        </edgeType>
    </edgeTypes>
</configuration>
