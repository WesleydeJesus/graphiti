<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <fileFormat extension="cal" type="text">
        <import>
            <transformation type="grammar" folder="." name="Cal" startRule="actor"/>
            <transformation type="xslt" file="calToCalML.xslt"/>
            <transformation type="xslt" file="input_CalML.xslt"/>
        </import>
        
        <export/>
    </fileFormat>

    <refinementFileExtensions/>

    <graphTypes>
        <graphType name="CAL actor">
            <attributes/>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="actor parameter" type="java.util.List">
                    <!-- default content: none -->
                </parameter>
                <parameter name="actor variable declaration" type="java.util.Map">
                    <!-- default content: none -->
                </parameter>
            </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="Input port">
            <attributes>
                <color red="0" green="60" blue="100"/>
                <shape name="triangle"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="Output port">
            <attributes>
                <color red="60" green="0" blue="100"/>
                <shape name="triangle"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes/>
</configuration>
