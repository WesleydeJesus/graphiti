<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <fileFormat extension="ipxactcmp" type="text/xml">
        <import>
            <transformation name="ip-xact/input_IP-XACT-Component.xslt"/>
        </import>
        
        <export>
            <transformation name="ip-xact/output_IP-XACT-Component.xslt"/>
        </export>
    </fileFormat>

    <refinementFileExtensions>
        <fileExtension name="ipxactds"/>
    </refinementFileExtensions>

    <graphTypes>
        <graphType name="Spirit IP-XACT component">
            <attributes/>
            <parameters>
                <parameter name="vendor" type="java.lang.String"/>
                <parameter name="library" type="java.lang.String"/>
                <parameter name="name" type="java.lang.String"/>
                <parameter name="version" type="java.lang.String"/>
            </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="hierConnection">
            <attributes>
                <color red="0" green="60" blue="100"/>
                <shape name="roundedBox"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String"/>
            </parameters>
        </vertexType>

        <vertexType name="componentInstance">
            <attributes>
                <color red="163" green="0" blue="85"/>
                <shape name="roundedBox"/>
                <size width="40" height="40"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String"/>
                <parameter name="vendor" type="java.lang.String"/>
                <parameter name="library" type="java.lang.String"/>
                <parameter name="name" type="java.lang.String"/>
                <parameter name="version" type="java.lang.String"/>
                <parameter name="refinement" type="java.lang.String"/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes>
        <edgeType name="interconnection">
            <attributes/>
            <parameters>
                <parameter name="id" type="java.lang.String"/>
                <parameter name="source port" type="java.lang.String"/>
                <parameter name="target port" type="java.lang.String"/>
            </parameters>
        </edgeType>
        
        <edgeType name="hierConnection">
            <attributes/>
            <parameters>
                <parameter name="source port" type="java.lang.String"/>
            </parameters>
        </edgeType>
    </edgeTypes>
</configuration>
