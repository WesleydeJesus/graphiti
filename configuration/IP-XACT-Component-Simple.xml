<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <fileFormat extension="component" type="text/xml">
        <import>
            <transformation type="xslt" file="ip-xact/simple/input_IP-XACT-Component.xslt"/>
        </import>
        
        <export>
            <transformation name="ip-xact/simple/output_IP-XACT-Component.xslt"/>
        </export>
    </fileFormat>

    <refinementFileExtensions>
        <fileExtension name="design"/>
    </refinementFileExtensions>

    <graphTypes>
        <graphType name="Spirit IP-XACT simple component">
            <attributes/>
            <parameters>
                <parameter name="cmpVendor" type="java.lang.String" default=""/>
                <parameter name="cmpLibrary" type="java.lang.String" default=""/>
                <parameter name="cmpName" type="java.lang.String" default=""/>
                <parameter name="cmpVersion" type="java.lang.String" default=""/>
                <parameter name="memoryAddress" type="java.lang.String" default="0x00000000"/>
                <parameter name="memoryRange" type="java.lang.String" default="0xFFFFFFFF"/>
                <parameter name="memoryWidth" type="java.lang.String" default="128"/>
            </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="Port">
            <attributes>
                <color red="255" green="0" blue="0"/>
                <shape name="roundedBox"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="busVendor" type="java.lang.String" default=""/>
                <parameter name="busLibrary" type="java.lang.String" default=""/>
                <parameter name="busName" type="java.lang.String" default=""/>
                <parameter name="busVersion" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="subDesign">
            <attributes>
                <color red="163" green="0" blue="85"/>
                <shape name="circle"/>
                <size width="40" height="40"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="vendor" type="java.lang.String" default=""/>
                <parameter name="library" type="java.lang.String" default=""/>
                <parameter name="version" type="java.lang.String" default=""/>
                <parameter name="refinement" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes>
    </edgeTypes>
</configuration>
