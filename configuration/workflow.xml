<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <fileFormat extension="workflow" type="text/xml">
        <import>
            <transformation name="workflow/input_workflow.xslt"/>
        </import>

        <export>
            <transformation name="workflow/output_workflow.xslt"/>
        </export>
    </fileFormat>

    <refinementFileExtensions>
        <fileExtension name="html"/>
    </refinementFileExtensions>

    <graphTypes>
        <graphType name="Preesm Workflow">
            <attributes/>
            <parameters/>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="Algorithm source">
            <attributes>
                <color red="22" green="196" blue="53"/>
                <shape name="circle"/>
                <size width="50" height="20"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="Architecture source">
            <attributes>
                <color red="196" green="22" blue="53"/>
                <shape name="triangle"/>
                <size width="50" height="20"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="Scenario source">
            <attributes>
                <color red="50" green="50" blue="50"/>
                <shape name="lozenge"/>
                <size width="30" height="30"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>

        <vertexType name="Task">
            <attributes>
                <color red="213" green="140" blue="43"/>
                <shape name="roundedBox"/>
                <size width="40" height="40"/>
            </attributes>
            <parameters>
                <parameter name="id" type="java.lang.String" default=""/>
                <parameter name="variable declaration" type="java.util.Map">
                    <!-- default content: none -->
                </parameter>
                <parameter name="plugin identifier" type="java.lang.String" default=""/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes>
        <edgeType name="Data transfer">
            <attributes>
                <directed value="true"/>
            </attributes>
            <parameters>
                <parameter name="source port" type="java.lang.String" default=""/>
                <parameter name="target port" type="java.lang.String" default=""/>
            </parameters>
        </edgeType>
    </edgeTypes>
</configuration>
