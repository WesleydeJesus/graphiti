<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <fileFormat extension="graphml" type="text/xml">
        <import>
            <transformation name="graphml/input_GraphML.xslt" type="XSLT"/>
        </import>

        <export>
            <transformation name="graphml/output_GraphML.xslt" type="XSLT"/>
        </export>
    </fileFormat>


    <refinementFileExtensions/>

    <graphTypes>
        <graphType name="GraphML graph">
            <attributes/>
            <parameters> </parameters>
        </graphType>
    </graphTypes>

    <vertexTypes>
        <vertexType name="Instance">
            <attributes>
                <color red="0" green="100" blue="200"/>
                <shape name="roundedBox"/>
                <size width="20" height="20"/>
            </attributes>
            <parameters>
                <parameter name="refId" type="java.lang.String"/>
                <parameter name="id" type="java.lang.String"/>
            </parameters>
        </vertexType>
    </vertexTypes>

    <edgeTypes>
        <edgeType name="edge">
            <attributes>
                <directed value="true"/>
            </attributes>
            <parameters>
                <parameter name="edge_prod" type="java.lang.String"/>
                <parameter name="edge_delay" type="java.lang.String"/>
                <parameter name="edge_cons" type="java.lang.String"/>
            </parameters>
        </edgeType>
    </edgeTypes>
</configuration>
